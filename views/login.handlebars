<div class="start-form">
<form class="signup-form">
    <div class="row .center-xs .middle-xs">
        <div class="col-xs-12">
            <input type="text" id="firstname-signup" />
            <label for="firstname-signup">first name</label>
            <small id="firstname-signup-error"></small>
            <input type="text" id="lastname-signup" />
            <label for="lastname-signup">last name</label>
            <small id="lastname-signup-error"></small>
            <input type="text" id="email-signup" />
            <label for="email-signup">email</label>
            <small id="email-signup-error"></small>
            <input type="password" id="password-signup" />
            <label for="password-signup">password</label>
            <small id="password-signup-error"></small>
            <div>
                <button class="btn-no-style" type="submit" id="btnRegister">register</button>
            </div>
        </div>
    </div>
</form>

<form class="login-form">
    <div class="row .center-xs .middle-xs">
        <div class="col-xs-12">
            <input type="text" id="email-login" />
            <label for="email-login">email</label>
            <small id="email-login-error"></small>
            <input type="password" id="password-login" />
            <label for="password-login">password</label>
            <small id="password-login-error"></small>
            <div>
                <button class="btn-no-style" type="submit" id="btnLogin">login</button>
            </div>
        </div>
    </div>
</form>
</div>

<script src="/js/validation.js"></script>
<script src="/js/login.js"></script>


